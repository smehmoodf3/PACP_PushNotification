<?xml version="1.0" encoding="utf-8" ?>

	   
	<!-- This section contains the log4net configuration settings -->
	<log4net>

		<!-- Define some output appenders -->
		<appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
			<layout type="log4net.Layout.PatternLayout">
				<param name="ConversionPattern" value="%d [%t] %-5p %c [%x] &lt;%X{auth}&gt; - %m%n" />
			</layout>
		</appender>

		<!-- RollingFileAppender looks after rolling over files by size or date -->
		<appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
			<param name="File" value="C:\\weblog\\weblog.log" />
			<param name="AppendToFile" value="true" />
			<param name="MaxSizeRollBackups" value="10" />
			<param name="MaximumFileSize" value="100KB" />
			<param name="RollingStyle" value="Size" />
			<param name="StaticLogFileName" value="true" />
			<layout type="log4net.Layout.PatternLayout">
				<param name="ConversionPattern" value="%d [%t] %-5p %-45c [%x] - %m%n" />
			</layout>
		</appender>
		
		<!-- FileAppender appends to a log and it is manually managed or size -->
	        <appender name="FileAppender" type="log4net.Appender.FileAppender">
			<param name="File" value="C:\\weblog\\weblog.log" />
		     	<!-- Example using environment variables in params -->
		        <!-- <param name="File" value="${TMP}\\ApplicationKit.log" /> -->
		        <param name="AppendToFile" value="true" />
            		<layout type="log4net.Layout.PatternLayout">
				<param name="ConversionPattern" value="%d [%t] %-5p %c [%x] - %m%n" />
        		</layout>
	        </appender>		
		
		<!-- Setup the root category, add the appenders and set the default level -->
		<root>
			<level value="INFO" />
			<appender-ref ref="ConsoleAppender" />
		</root>

		<!-- ECL WEB -->
		<logger name="ECL">
			<level value="INFO" />
			<appender-ref ref="RollingFileAppender" />
		</logger>

	        <!-- ECLLogic classes -->
	     <logger name="PAPListener">
			<level value="INFO" />
			<appender-ref ref="RollingFileAppender" />
		</logger>
	        
		<logger name="Pusher">
			<level value="INFO" />
			<appender-ref ref="RollingFileAppender" />
		</logger>
		
		<logger name="ECLConfiguration">
			<level value="INFO" />
			<appender-ref ref="RollingFileAppender" />
		</logger>

		<logger name="ECLLogic">
			<level value="INFO" />
			<appender-ref ref="RollingFileAppender" />
		</logger>
		
		<logger name="CustomAppPusher">
			<level value="DEBUG" />
			<appender-ref ref="RollingFileAppender" />
		</logger>
		
		<logger name="BrowserChannelPusher">
			<level value="INFO" />
			<appender-ref ref="RollingFileAppender" />
		</logger>

		<logger name="DataReader">
			<level value="DEBUG" />
			<appender-ref ref="RollingFileAppender" />
		</logger>	
		<logger name="DataStore">
			<level value="DEBUG" />
			<appender-ref ref="RollingFileAppender" />
		</logger>		
		
		
	</log4net>
